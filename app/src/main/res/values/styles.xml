<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/lightOrange</item>
    </style>
    <style name="cell" parent="@style/AppTheme" >
        <item name="android:textSize">@dimen/sizeOfNum</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_cell</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>
    <style name="cellDark" parent="@style/AppTheme" >
        <item name="android:textSize">@dimen/sizeOfNum</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_cell</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

</resources>
